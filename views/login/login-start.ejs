<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
  <div class="login-container">
    <!-- Student Login -->
    <div class="login-box" id="studentLoginBox">
      <h1>Student Login</h1>
      <p>Welcome back! Please log in to access your dashboard.</p>
      <form id="studentLoginForm">

        <div class="input-group">
          <label for="rollNumber">Roll Number</label>
          <input type="text" id="rollNumber" name="rollNumber" placeholder="Enter your roll number" required>
        </div>
        <button type="submit">Log In</button>
      </form>
      <p class="switch-text">Are you an admin? <a href="#" id="switchToAdmin">Admin Login</a></p>
    </div>

    <!-- Admin Login -->
    <div class="login-box" id="adminLoginBox" style="display: none;">
      <h1>Admin Login</h1>
      <p>Welcome back! Please log in to access your dashboard.</p>
      <form id="adminLoginForm">
        <div class="input-group">
          <label for="username">Username</label>
          <input type="text" id="username" name="username" placeholder="Enter your username" required>
        </div>
        <div class="input-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter your password" required>
        </div>
        <button type="submit">Log In</button>
      </form>
      <p class="switch-text">Are you a student? <a href="#" id="switchToStudent">Student Login</a></p>
    </div>
  </div>
  <script src="/js/auth.js"></script>
</body>

</html>